.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f5f5f5;
  font-family: 'Microsoft YaHei';
}

.comm_bottom_line {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: #f5f5f5;
}

.conmm_text{
  font-size: 28rpx;
  color: #999;
}

.conmm_button{
  margin: 40rpx;
}

.conmm_button2{
  margin:0 40rpx 50rpx ;
}


.little_app_version {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
}

.bottom_float_btns {
  width: 100%;
  height: 50px;
  background: #50b56a;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border: none;
  border-radius: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom_float_btns:after {
  border: none;
}

button[type="primary"] {
  color: #fff;
  background-color: #50b56a;
}

button {
  line-height: inherit;
  padding: 5px 15px;
  font-size: 30rpx;
}

.btn-active {
  color: #fff !important;
  background-color: #50b56a !important;
}

.btn-active-red {
  color: #fff !important;
  background-color: #e15146 !important;
}

.btn-active-big {
  background-color: #5bb974 !important;
}
